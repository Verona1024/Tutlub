<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Share this app"
        android:textAlignment="center"
        android:textColor="#757575"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonShareFacebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="6dp"
        android:elevation="3dp"
        android:text="Share with Facebook"
        android:textAllCaps="false"
        android:background="#3948A7"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buttonShareWhatsApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="6dp"
        android:elevation="3dp"
        android:text="Share with WhatsApp"
        android:textAllCaps="false"
        android:background="#1EBEA5"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buttonShareTwitter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="3dp"
        android:text="Share with Twitter"
        android:textAllCaps="false"
        android:background="#398FF2"
        android:textColor="#FFFFFF" />
</LinearLayout>